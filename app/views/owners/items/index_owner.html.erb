<h3 class="ow_ganre_title">商品一覧</h3>
  <div class="row">
    <%= link_to'', new_owners_item_path,class:"fas fa-plus-circle fa-4x" %>
    <div class = "col-lg-11">
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </thead>
        <% @item.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to item.name, owners_path(item) %>
            </td>
            <td>
              <%= item.no_tax_price.to_s(:delimited, delimiter: ',')%>
            
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <% if item.sale_status == "available" %>
                販売中
              <% else %>
                販売中止
              <% end %>
            </td>
        <% end %>
      </table>
    </div>
  </div>
  <%= paginate @items %>