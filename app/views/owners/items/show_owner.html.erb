
  <div class="row">
    <div class = "col-lg-3">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "300x300"%>
    </div>
    <div class = "col-lg-2">
      <br><h5>商品名</h5>
      <br><h5>商品説明</h5>
      <br><h5>ジャンル</h5>
      <br><h5>税抜価格</h5>
      <br><h5>税込価格</h5>
      <br><h5>販売ステータス</h5>
    </div>
    <div class = "col-lg-7">
      <br><h5><%= @item.name %></h5>
      <br><h5><%= @item.content %></h5>
      <br><h5><%= @item.genre.name %></h5>
      <br><h5><%= @item.no_tax_price %>円</h5>
      <br><h5><%=itemprice = @item.no_tax_price*1.1       
