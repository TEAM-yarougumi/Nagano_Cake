<h2>ジャンル一覧・追加</h2>


<%= form_with(model:@genre , local: true) do |form| %>
  <%= form.label :ジャンル名 %><%= form.text_field :name %>

    <%= form.radio_button :status, :有効 %>
    <%= form.label :status, "有効", {value: :true, style: "display: inline-block;"} %>
    <%= form.radio_button :status, :無効%>
    <%= form.label :status, "無効", {value: :false, style: "display: inline-block;"} %>
    <%= form.submit %>
 <% end %>
 <table class="table table-hover table-inverse">
   <thead>
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
   </thead>
   <% @genres.each do |genre| %>
   <tr>
    <td>
    <%= genre.name %>
    </td>
    <td>
      <% if genre.status == true %>
      有効
      <% else %>
      無効
      <% end %>
    </td>
    <% end %>
 </table>




  
  