<h4>ジャンル一覧・追加</h4>

<%= form_with(model:@genre, url: owners_genres_path, local: true) do |f| %>
   <%= f.label :name, "ジャンル名" %>
   <%= f.text_field :name %>

   <%= f.radio_button :status, :true %>
   <%= f.label :status, "有効", {value: :true, style: "display: inline-block;" } %>
   <%= f.radio_button :status, :false%>
   <%= f.label :status, "無効", {value: :false, style: "display: inline-block;"} %>
   <%= f.submit'追加',class: "btn btn-primary px-3"  %>
<% end %>
<table class="table table-hover table-inverse">
   <thead>
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
   </thead>
   <% @genres.each do |genre| %>
      <tr>
         <td>
            <%= genre.name %>
         </td>
         <td>
            <% if genre.status == true %>
               有効
            <% else %>
               無効
            <% end %>
         </td>
         <td>
         <%= link_to "編集する", edit_owners_genre_path(genre), class: "btn-sm btn-primary",style:"border-radius: 0.3em" %>
         </td>
      </tr>
   <% end %>
</table>