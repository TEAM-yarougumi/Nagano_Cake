<h1>Editing Genre</h1>
<%= form_with(model: @genre, url: owners_genre_path(@genre), method: :patch, local: true ) do |f| %>

    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>


    <%= f.radio_button :status, :true %>
    <%= f.label :status, "有効", {value: :true, style: "display: inline-block;"} %>
    <%= f.radio_button :status, :false %>
    <%= f.label :status, "無効", {value: :false, style: "display: inline-block;"} %>

<br><%= f.submit '変更を保存',class: "btn btn-primary btn-block" %>

<% end %>