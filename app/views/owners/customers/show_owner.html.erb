<div class="container" style="margin:1vw 50px 0;">
  <div class="row">
    <div class="col-2 text-center">
      <h5 class="bg-info text-white rounded p-1 mt-5">会員詳細</h5>
	</div>
  </div>
</div>

<div class="continer mt-4">
<div class="row ml-5">
	<table class="col-4 table table-border bg-light">
    <tr>
		  <th>顧客ID</th>
		   <td>
			   <%= @customers.id %>
          <% if @customer.is_valid == true %>
            <span>　<i class="fas fa-bullseye blue"></i>退会済
          <% elsif @customer.is_valid == false %>
            　<i class="fas fa-bullseye red"></i>有効会員</span>
          <% end %>
		   </td>
    </tr>
    <tr>
		  <th>氏名</th>
		  <td>
			  <%= @customers.last_name %>
			  <%= @customers.first_name %>
		  </td>
    </tr>
    <tr>
		  <th>フリガナ</th>
		  <td>
			  <%= @customers.last_furigana %>
			  <%= @customers.first_furigana %>
		  </td>
    </tr>
    <tr>
		  <th>郵便番号</th>
		  <td>
			  <%= @customers.postal_code %>
		  </td>
    </tr>
    <tr>
		  <th>住所</th>
		  <td>
			  <%= @customers.address %>
		  </td>
    </tr>
    <tr>
		  <th>電話番号</th>
		  <td>
			  <%= @customers.telephone_number %>
		  </td>
    </tr>
    <tr>
		  <th>メールアドレス</th>
		  <td>
			  <%= @customers.email %>
		  </td>
    </tr>
  </table>
 </div>
