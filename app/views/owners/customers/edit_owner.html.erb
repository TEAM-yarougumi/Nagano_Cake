<div class="row">
<h3 class="ow_ganre_title"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>

<%= form_with(model: @customer, url:  owners_update_owner_costomer_path(@customer), method: :patch, local: true ) do |f| %>
  <div class="field" style="margin-top:20px;">
    <%= f.label :last_name, "会員ID", class: "form_label" %>
    <%= @customer.id %>
  </div>

  <div class="field">
    <%= f.label :last_name, "氏名", class: "form_label" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete:"family-name" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete:"given-name"%>
  </div>

  <div class="field">
    <%= f.label :last_furigana, "フリガナ", class: "form_label" %>
    <%= f.text_field :last_furigana, autofocus: true, autocomplete:"family-name" %>
    <%= f.text_field :first_furigana, autofocus: true, autocomplete:"given-name"%>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号", class: "form_label" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "post-code"%>
  </div>

  <div class="field">
    <%= f.label :address, "住所", class: "form_label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address"%>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号", class: "form_label" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel"%>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス", class: "form_label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :status, "会員ステータス", class: "form_label" %>
    <%= f.radio_button :status, :available %>
    <%= f.label :status, "有効", {value: :true, style: "display: inline-block;"} %>
    <%= f.radio_button :status, :unavailable %>
    <%= f.label :status, "退会済み", {value: :false, style: "display: inline-block;"} %>
  <div>

  <%= f.submit "編集履歴を保存する" %>
<% end %>
</div>