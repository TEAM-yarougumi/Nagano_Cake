<div class="row">
<h3 class="ow_ganre_title"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>

<%= form_with(model: @customer, url:  owners_update_owner_costomer_path(@customer), method: :patch, local: true ) do |f| %>
 
 <div class="col-xs-10">
  <div class="form-group col-xs-9" style="margin-top:20px;">
    <%= f.label :last_name, "会員ID", class: "col-sm-4 control-label" %>
    <%= @customer.id %>
  </div>

  <div class="form-group col-xs-9">
    <%= f.label :last_name, "氏名", class: "col-sm-4 control-label" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete:"family-name", class: "col-sm-3 form-control-static name"%>
    <%= f.text_field :first_name, autofocus: true, autocomplete:"given-name", class: "col-sm-3 form-control-static name"%>
  </div>

  <div class="form-group col-xs-9">
    <%= f.label :last_furigana, "フリガナ", class: "col-sm-4 control-label" %>
    <%= f.text_field :last_furigana, autofocus: true, autocomplete:"family-name", class: "col-sm-3 form-control-static name"%>
    <%= f.text_field :first_furigana, autofocus: true, autocomplete:"given-name", class: "col-sm-3 form-control-static name"%>
  </div>

  <div class="form-group col-xs-9">
    <%= f.label :postal_code, "郵便番号", class: "col-sm-4 control-label" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "post-code", class: "col-sm-3 form-control-static name"%>
  </div>

  <div class="form-group col-xs-9">
    <%= f.label :address, "住所", class: "col-sm-4 control-label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="form-group col-xs-9">
    <%= f.label :telephone_number, "電話番号", class: "col-sm-4 control-label" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel", class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="form-group col-xs-9">
    <%= f.label :email, "メールアドレス", class: "col-sm-4 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="form-group col-xs-9">
    <%= f.label :status, "会員ステータス", class: "col-sm-4 control-label" %>
    <%= f.radio_button :status, :available %>
    <%= f.label :status, "有効", {value: :true, style: "display: inline-block;"} %>
    <%= f.radio_button :status, :unavailable %>
    <%= f.label :status, "退会済み", {value: :false, style: "display: inline-block;"} %>
  </div>
</div>
<div class="actions col-xs-9">
  <%= f.submit "編集履歴を保存する" ,class: "btn btn-primary" %>
  </div>
<% end %>
</div>