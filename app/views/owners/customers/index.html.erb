<h4 class="ow_ganre_title">会員一覧</h4>
<table class="table table-bordered">
  <thead>
    <tr class="active">
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
   </thead>
  <% @customer.each do |customer| %>
    <tr>
      <td>
        <%=link_to customer.id,owners_edit_owner_costomer_path(customer)%>
      </td>
      <td>
        <%=link_to customer.last_name + customer.first_name, owners_show_owner_costomer_path(customer) %>
      </td>
      <td>
        <%= customer.email %>
      </td>
         <td>
            <% if customer.status == 0 %>
               有効
            <% else %>
               無効
            <% end %>
         </td>
    </tr>
  <% end %>
</table>