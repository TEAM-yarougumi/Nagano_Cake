<h2>注文履歴詳細</h2>
      <div class="field">
        <div>
        購入者
        </div>
        <div>
        <p><%= @order.customer.last_name %><%= @order.customer.first_name %></p>
        </div>
      </div>

      <div class="field">
        <div>
          配送先
        </div>
        <div>
          <p><%= @order.address %></p>
        </div>
      </div>

      <div class="field">
        <div>
          支払い方法
        </div>
        <div>
          <% case @order.payment %>
          <% when "credit_card" %>
           クレジットカード
          <% when "bank_transfer" %>
           銀行振込
        <% end %>
        </div>
      </div>


      <div>
        注文ステータス
      </div>

        <%= form_with(model: @order, local: true, url: owners_order_path(@order), method: :patch)do |f| %>
        <%= f.select :status, [["入金待ち", 0],["入金確認", 1],["製作中", 2],["発送準備中", 3],["発送済み", 4],], value: @order.status %>
        <%= f.submit "更新", class: "btn btn-primary" %>
        <% end %>


   <table class="table table-hover table-bordered table-inverse">
          <thead>
              <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th>製作ステータス</th>

              </tr>
          </thead>
        <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr>
                  <td>
                    <%= order_item.item.name %>
                  </td>
                  <td>
                    <%= (order_item.item.no_tax_price * 1.1).floor %>
                  </td>
                  <td>
                    <%= order_item.number %>
                  </td>
                  <td>
                    <%= ((order_item.number * order_item.item.no_tax_price)* 1.1).floor %>
                  </td>
                  <td>
                    <%= form_with(url: owners_order_path, method: :patch, local:true)  do |f| %>
                    <%= f.select :make_status, [["着手不可", 0],["制作待ち", 1],["製作中", 2],["制作完了", 3],] %>
                    <%= f.submit "更新", class: "btn btn-primary" %>
                    <% end %>
                  </td>

              </tr>
        <% end %>
        </tbody>
      </table>


      <table class="table table-hover table-bordered table-condensed">
        <tr>
          <th>商品合計</th>
          <td>
               <% @order.order_items.each do |order_item| %>
                <% sab_total = ((order_item.number * order_item.item.no_tax_price)* 1.1).floor %>
                <% @sum += sab_total %>
                <% end %>
                ¥<%= @sum %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td>¥800</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td>
            ¥<%= (@sum*1.1+800).floor %>
          </td>
        </tr>
        </table>
        <div>
        </div>