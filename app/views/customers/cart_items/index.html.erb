<div class="cart_title">
  <h2>ショッピングカート</h2>
</div>
<div class="cart_all_destory_btn">
  <%= link_to  "カートを空にする", customer_cart_items_path, method: :delete, data: { confirm: 'カートの中身をすべて削除します。問題なければ、OKをクリックしてください。' } %>
</div>
<div class="shopping_cart">
  <% @total_price = 0  %>
  <% @cart_items.zip(@items).each do |cart_item, item| %>
    <table>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>

      <tr>
        <td>
          <%= attachment_image_tag(item, :image, size: "50x50", fallback: "no_image.jpg") %>
          <%= item.name %>
        </td>
        <td>
          <%= ( item.no_tax_price * 1.1 ).floor %>
        </td>
        <td>
          <%= form_with(model: cart_item, url: customer_cart_item_path(current_customer.id, cart_item.id), method: :patch, remote: :false) do |f| %>
            <%= f.number_field :number, size: "20x20" %>
            <%= f.submit "変更" %>
          <% end %> 
        </td>
        <td>
          <%= ( item.no_tax_price * 1.1 ).floor * cart_item.number %>
        </td>
        <td>
          <%= link_to  "削除する", customer_cart_item_path(current_customer.id, cart_item.id), method: :delete %>
        </td>
      </tr>
    </table>
    <% @total_price += ( item.no_tax_price * 1.1 ).floor * cart_item.number  %>
  <% end %>

  <dl>
    <dd>
      合計金額
    </dd>
    <dt>
      <%= @total_price %>円
    </dt>
  </dl>
</div>
<div class="shopping_continue_btn">
  <%= link_to  "買い物を続ける", customers_items_path %>
</div>
<div class="shopping_continue_btn">
  <%= link_to  "情報入力に進む", customers_items_path %>
</div>