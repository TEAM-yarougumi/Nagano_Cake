<div class="row">
  <div class="col-xs-3">
    <nav class="genre_nav navbar navbar-dark bg-dark">
      <div class="genre_nav_title">
        <h3>ジャンル検索</h3>
      </div>
      <div class="genre_nav_list">
        <ul>
          <% @genres.each do |genre| %>
            <%= link_to customers_items_path(:genre_nav => genre.id) do %>
              <li>
                <%= genre.name %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
  
  <div class="col-xs-9">
    <div class="item_list">
      <div class="item_title">
        <div class="item_title_name">
          <h2><%= @title %>一覧</h2>
        </div>
        <div class="item_title_count">
          <p>(全<%= @items_count %>件)</p>
        </div>
      </div>
      <div class="row">
        <% @items.each do |item| %>
          <%= link_to customers_item_path(item.id) do %>
            <div class="col-xs-3">
              <div class="item_image">
                <%= attachment_image_tag(item, :image, size: "200x180", fallback: "no_image.jpg") %>
              </div>
              <div class="item_name">
                <%= item.name %>
              </div>
              <div class="item_price">
                ¥<%= ( item.no_tax_price * 1.1 ).floor %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="paginate">
        <% if defined?(@genre).blank? %>
          <%= paginate @items %>
        <% else %>
          <%= paginate @items %>
          <%= hidden_field_tag :genre_nav, @genre.id %>
        <% end %>
      </div>
    </div>
  </div>
</div>
