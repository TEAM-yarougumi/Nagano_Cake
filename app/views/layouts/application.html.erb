<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class="container">
    <div class="row">
      <header>
        <div class="col-xs-1"></div>
        <div class="col-xs-5">
          <%= image_tag "logo.png", class: "img-fluid" %>
        </div>

        <nav class="col-xs-6">
          <ul class="header_list">
            <% if customer_signed_in? %>
              <li><%= link_to "マイページ", customer_path(current_user), class: "btn btn-default header_list_item" %></li>
              <li><%= link_to "商品一覧", customers_items_path, class: "btn btn-default header_list_item" %></li>
              <li><%= link_to "カート", customer_cart_items_path(current_user), class: "btn btn-default header_list_item" %></li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, class: "btn btn-default header_list_item" %></li>
            <% else %>
              <li><%= link_to "About", home_about_path, class: "btn btn-default header_list_item" %></li>
              <li><%= link_to "商品一覧", customers_items_path, class: "btn btn-default header_list_item" %></li>
              <li><%= link_to "新規登録", new_customer_registration_path, class: "btn btn-default header_list_item" %></li>
              <li><%= link_to "ログイン", new_customer_session_path, class: "btn btn-default header_list_item" %></li>
            <% end %>
          </ul>
        </nav>
      </header>
    </div>
  </div>

  <body>
    <%= yield %>
  </body>
  
</html>
